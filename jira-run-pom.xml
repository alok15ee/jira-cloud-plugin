<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.plugins</groupId>
    <artifactId>atlassian-connect-jira-software-runner</artifactId>
    <version>1.0.9</version>
    <packaging>${packaging}</packaging>
    <organization>
        <name>Atlassian</name>
        <url>http://atlassian.com/</url>
    </organization>
    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <connection>scm:git:ssh://git@bitbucket.org/atlassianlabs/jira-software-connect-runner.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.org/atlassianlabs/jira-software-connect-runner.git</developerConnection>
        <tag>atlassian-connect-jira-software-runner-1.0.9</tag>
    </scm>
    <distributionManagement>
        <repository>
            <id>atlassian-m2-repository</id>
            <name>Atlassian Public Repository</name>
            <url>https://maven.atlassian.com/public</url>
        </repository>
    </distributionManagement>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.2</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-provider-gitexe</artifactId>
                        <version>1.9.4</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-jira-plugin</artifactId>
                <version>5.1.18</version>
                <configuration>
                    <productVersion>${jira}</productVersion>
                    <productDataVersion>${jira}</productDataVersion>
                    <jvmArgs>-Datlassian.upm.on.demand=true</jvmArgs>
                    <applications>
                        <application>
                            <applicationKey>jira-software</applicationKey>
                            <version>RELEASE</version>
                        </application>
                    </applications>
                    <pluginArtifacts>
                        <pluginArtifact>
                            <groupId>com.atlassian.bundles</groupId>
                            <artifactId>json-schema-validator-atlassian-bundle</artifactId>
                            <version>${json-schema-validator-atlassian-bundle}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.jwt</groupId>
                            <artifactId>jwt-plugin</artifactId>
                            <version>${jwt-plugin}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.upm</groupId>
                            <artifactId>atlassian-universal-plugin-manager-plugin</artifactId>
                            <version>${atlassian-universal-plugin-manager-plugin}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.plugins</groupId>
                            <artifactId>atlassian-connect-plugin</artifactId>
                            <version>${atlassian-connect-plugin}</version>
                        </pluginArtifact>
                        <pluginArtifact>
                            <groupId>com.atlassian.plugins</groupId>
                            <artifactId>jira-agile-connect-plugin</artifactId>
                            <version>${jira-agile-connect-plugin}</version>
                        </pluginArtifact>
                    </pluginArtifacts>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <packaging>pom</packaging>
        <jira>7.2.0-OD-02-009</jira>
        <json-schema-validator-atlassian-bundle>1.0.4</json-schema-validator-atlassian-bundle>
        <jwt-plugin>1.5.9-0019</jwt-plugin>
        <atlassian-universal-plugin-manager-plugin>2.21-D20160128T024330</atlassian-universal-plugin-manager-plugin>
        <atlassian-connect-plugin>1.1.76</atlassian-connect-plugin>
        <jira-agile-connect-plugin>1.0.5-D20160202T130416</jira-agile-connect-plugin>
    </properties>
    <profiles>
        <profile>
            <id>test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.19</version>
                        <configuration>
                            <skipTests>true</skipTests>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-jira-plugin</artifactId>
                        <version>5.1.18</version>
                        <configuration>
                            <pluginArtifacts combine.children="append">
                                <pluginArtifact>
                                    <groupId>com.atlassian.jira.tests</groupId>
                                    <artifactId>jira-testkit-plugin</artifactId>
                                    <version>7.1.4</version>
                                </pluginArtifact>
                            </pluginArtifacts>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <packaging>jar</packaging>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.hamcrest</groupId>
                    <artifactId>hamcrest-library</artifactId>
                    <version>1.3</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                    <version>4.10</version>
                    <scope>test</scope>
                    <exclusions>
                        <exclusion>
                            <groupId>org.hamcrest</groupId>
                            <artifactId>hamcrest-core</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>org.apache.commons</groupId>
                    <artifactId>commons-lang3</artifactId>
                    <version>3.4</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>commons-io</groupId>
                    <artifactId>commons-io</artifactId>
                    <version>2.4</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>com.google.code.gson</groupId>
                    <artifactId>gson</artifactId>
                    <version>2.4</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>commons-codec</groupId>
                    <artifactId>commons-codec</artifactId>
                    <version>1.10</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>com.atlassian.jira</groupId>
                    <artifactId>jira-func-tests</artifactId>
                    <version>${jira}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>