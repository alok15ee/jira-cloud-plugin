{{!< layout}}
<header class="aui-page-header">
    <div class="aui-page-header-inner">
        <div class="aui-page-header-main intro-header">
            <h1>{{title}}</h1>
        </div>
    </div>
</header>

<div class="aui-page-panel main-panel">
    <div class="aui-page-panel-inner">

        <section role="dialog" id="actor-dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
            <!-- Dialog header -->
            <header class="aui-dialog2-header">
                <!-- The dialog's title -->
                <h3 class="aui-dialog2-header-main" style="overflow: visible; ">$i18n.getText('actor.header.first')</br>$i18n.getText('actor.header.second')</h3>

            </header>
            <!-- Main dialog content -->


            <div class="aui-dialog2-content">

                <form class="aui" action="#" name="jiraform" id="actorform">

                    <div class="content">
                        <div class="field-group">

                            <label for="summary">$i18n.getText('actor.name')<span class="aui-icon icon-required">Required</span></label>
                            <input type="text" value="" name="actor" id="actor" class="text long-field" data-aui-validation-field data-aui-validation-required="required" required>
                            <span class="actorError" style="color: #880000"></span>

                        </div>

                    </div>
                </form>
            </div>
            <!-- Dialog footer -->
            <footer class="aui-dialog2-footer">
                <!-- Actions to render on the right of the footer -->

                <div class="aui-dialog2-footer-actions">
                    <button class="aui-button aui-button-primary ap-dialog-submit"
                            aria-disabled="false" id="Submit">$i18n.getText('submit.button')</button>
                    <button id="dialog-close-button" class="aui-button aui-button-link">$i18n.getText('close.button')</button>
                </div>
                <!-- Hint text is rendered on the left of the footer -->

            </footer>
        </section>
